---
const response = await fetch('/data/conteudo-home.json');
const conteudo = await response.json();
const hero = conteudo.hero;
---

<section class="bg-gradient-to-b from-blue-100 to-white py-16 px-4 text-center">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4">{hero.titulo}</h1>
    <p class="text-lg md:text-xl text-blue-800 mb-8">{hero.subtitulo}</p>
    {hero.cta && (
      <a href={hero.cta.link} class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold shadow hover:bg-blue-700 transition">
        {hero.cta.texto}
      </a>
    )}
  </div>
</section>