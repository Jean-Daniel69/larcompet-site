---
import conteudo from '../data/conteudo-home.json' assert { type: "json" };
const comoFunciona = conteudo.comoFunciona;
---

<section class="py-16 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-blue-900 mb-2">{comoFunciona.titulo}</h2>
    <p class="text-lg text-gray-600 mb-10">{comoFunciona.subtitulo}</p>
    <div class="grid md:grid-cols-3 gap-8">
      {comoFunciona.passos.map(passo => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-3xl font-bold text-blue-600 mb-3">{passo.numero}</div>
          <h3 class="text-xl font-semibold text-blue-900 mb-2">{passo.titulo}</h3>
          <p class="text-gray-700">{passo.descricao}</p>
        </div>
      ))}
    </div>
  </div>
</section>